<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="24dp">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/dialog_note_title"
        android:hint="@string/dialog_set_title_hint"
        android:layout_margin="16dp"/>

    <Spinner
        android:id="@+id/dialog_note_notepad_picker"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp">

    </Spinner>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:minLines="5"
        android:lines="8"
        android:id="@+id/dialog_note_text"
        android:hint="@string/dialog_set_text_hint"
        android:scrollbars="vertical"
        android:layout_margin="16dp"/>
    <!-- важно понимать, что значения minLines и lines выбирались от балды -->
</LinearLayout>